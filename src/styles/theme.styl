// main-color = #A9C6CD
main-color = #020A11
extra-color = #EB46E8

@font-face {
    font-family: 'Actay Wide';
    src: url('ActayWide-Bold.woff2') format('woff2'),
        url('ActayWide-Bold.woff') format('woff');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
}

li, th, td
	font-family 'PT Mono', sans-serif
	color #fff

blockquote
	font-family 'PT Mono', sans-serif
	color main-color
	font-weight 100
	letter-spacing -1px
	&:before
		font-family 'PT Sans'

.source
    font-family 'Actay Wide', sans-serif
    bottom 10%
    position absolute
    padding 0 15px
    font-size 25px
    line-height 1.8
    background extra-color
    left 0
    text-align center
	
.nosign
	li
		font-family 'PT Mono', sans-serif
		&:before
			visibility hidden
		
.slide::after
	background none
	height 75px
	min-width 55px
	color main-color
	font-family 'Actay Wide', sans-serif
	font-size 40px
	padding 0 7px
	margin-left 30px

.slide.rbn::after
	background extra-color
	
.slide::before
	position absolute
	top 75px
	right 100px
	height 50px
.slide
	padding-top 60px
	&.right
		padding-left 550px
	h2
		color #000
		font-family 'Actay Wide', sans-serif
		font-weight 100
	a
		color green
		&.bottom
			position absolute
			bottom 15%
			left 50%
			margin-left: -100px

.html
	color #666

.hightlight
.important
.alert
	border-radius 0.2em
	padding 0.1em 0.3em
.hightlight
	background #fafaa2
.hightlight *
	color #000 !important
.important
	background important-color
	color #fff
.important *
	color #fff !important
.alert
	background #D10A0A
	color #fff
.alert *
	color #fff !important
.comment
	color #999999
	
.progress:before
	background extra-color
	
.tag
	color #AD1531
.attr
	color #4F7302

.slide
	.shout.smaller
		font-size 90px
		a
			color #fff
	&.menu-slide
		h2
			font-size 120px
			margin-bottom 0
			padding 0 30px
		ul
			color #FFF
			& > li
				font-size 120px
				line-height 1
				font-weight bold
				padding 0 30px
				&:before
					opacity 0
			
		.selected-item
			background-color main-color
			display inline-block
			
		.transparent
			opacity 0.25
	&.label-header
		h2
			display inline-block
			background-color extra-color
			padding 12px
			font-family 'Actay Wide', sans-serif
			font-size 35px
			color main-color
			&.shout
				margin-left 0
				padding 20px 0
				font-size 52px
				border none
		&.bg
			h2
				background none
				padding 15px
	&.capture
		h2
			&.shout
				font-size 64px;

	&.top-center
		h2
			&.shout
				margin-left: 150px
				margin-top: -120px

	h2 .label
		color #FFF
		padding 10px 40px
		font-size 120px
		&.right 
			float right
		
	p.center
		text-align center
		img
			max-width 100%
		
	&.white
		p
		ul
		td
			color #FFF
	
	&.bgblack
		background black

blockquote
	font-size 20px	
	line-height 1.4
	color white
	
figcaption
	color white
	opacity 0.5
	position: relative
	line-height: 1.6
	margin-top: 20px !important

.label
	background-color main-color
	color #fff
	padding 0 10px
	display inline-block

.screen-example
	vertical-align top
	float right
	border 1px solid #efefef
	padding-top 10px
	width 700px
	
.relative
	position relative

	
.slide ol.no-indent li, .slide ul.no-indent li
	text-indent 0
	margin-bottom 5px
	
.frame
	box-shadow 0 0 5px 5px #eee
	line-height 0
	border-radius 15px 15px 0 0
	.title
		background-color #efefef
		height 30px
		border-radius 15px 15px 0 0
		border 1px solid #aaa
		border-bottom-width 0
		line-height 24px
		padding-left 15px
	.btn
		height 13px
		width 13px
		display inline-block
		border-radius 50%
		&.close
			background-color red
		&.hide
			background-color yellow
		&.expand
			background-color green
	
.fade-opacity
	opacity 0.25
.opacity-0
	opacity 0
	

.bold
	font-weight: bold